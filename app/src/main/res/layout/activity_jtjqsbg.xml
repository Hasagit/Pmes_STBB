<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.JtjqsbgActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_sl_false">

        <Button
            android:id="@+id/cancle_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/cmdclose_sl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="机台及腔数变更"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1608dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/blue_sl_false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="生产日期"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="序号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="制造单号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="工单单号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="生产批号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="产品编号"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="品名规格"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="产品腔数"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="实际腔数"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="完工日期"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="计划数量"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="良品数量"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="@dimen/b3_lable"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="模具编号"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="模具名称"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="模具腔数"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <ListView
                android:id="@+id/list_jtjqsbg_1"
                android:layout_width="1608dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:divider="@color/touming"></ListView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/blue_sl_false"></LinearLayout>


</LinearLayout>
