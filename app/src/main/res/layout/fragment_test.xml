<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiduoyi.Fragment.TestFragment">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zy_drawer">
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.github.barteksc.pdfviewer.PDFView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pdfview"></com.github.barteksc.pdfviewer.PDFView>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/waitingView">
                <ProgressBar
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp"
                    android:text="下载中..."
                    />
            </LinearLayout>
            <Button
                android:id="@+id/open_btn"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/open_drawer_btn"
                android:layout_width="55dp"
                android:layout_height="130dp" />
        </FrameLayout>
        <FrameLayout
            android:clickable="true"
            android:background="@color/lable"
            android:layout_gravity="right"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            >
            <ListView
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pdf_list"
                android:divider="@color/touming"></ListView>
            <Button
                android:clickable="true"
                android:id="@+id/close_btn"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/close_drawer_btn"
                android:layout_width="55dp"
                android:layout_height="130dp" />
        </FrameLayout>
    </android.support.v4.widget.DrawerLayout>
</FrameLayout>
